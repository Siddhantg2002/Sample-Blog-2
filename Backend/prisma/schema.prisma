generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HashStore {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  hash String
}

model LatestBlogs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  body        String
  image       String
  createdAt   DateTime @default(now())
}

model AllBlogs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String
  author    String
  date      String
  image     String
  createdAt DateTime @default(now())
}

model User {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  email           String     @unique
  password        String
  image           String
  phone_number    String
  resetToken      String     @unique
  expiry_of_Token DateTime
  createdAt       DateTime   @default(now())
  blogs           UserBlog[] @relation("UserBlogs")
}

model UserBlog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id   String   @db.ObjectId
  user      User     @relation(fields: [user_id], references: [id], name: "UserBlogs")
  title     String
  author    String
  date      String
  content   String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}


